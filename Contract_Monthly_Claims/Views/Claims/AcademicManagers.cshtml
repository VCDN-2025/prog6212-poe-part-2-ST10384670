@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "Manager - Approve Claims";
}

<div class="manager-approve-container mt-4">
    <h2 class="text-center mb-4">Academic Manager - Approve Claims</h2>

    @if (!Model.Any())
    {
        <p class="text-muted text-center">No verified claims to approve.</p>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Total Amount</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Lecturer?.FullName ?? "N/A"</td>
                        <td>R @claim.TotalAmount</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (claim.SupportingDocuments != null && claim.SupportingDocuments.Any())
                            {
                                <a href="@claim.SupportingDocuments.First().FilePath" target="_blank" class="text-primary fw-bold">
                                    @claim.SupportingDocuments.First().FileName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">@claim.Status</span>
                        </td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <!-- Approve -->
                                <form asp-action="ApproveClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-sm btn-success shadow-sm">Approve</button>
                                </form>
                                <!-- Reject -->
                                <form asp-action="RejectByManager" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-sm btn-danger shadow-sm">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    /* Page container with soft banana background */
    .manager-approve-container {
        background-color: #fff8dc; /* soft banana */
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
    }

        /* Banner header */
        .manager-approve-container h2 {
            background: linear-gradient(135deg, #ffb703, #ffcc00);
            color: #333;
            padding: 15px;
            border-radius: 10px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

        /* Table styling */
        .manager-approve-container table {
            border-radius: 10px;
            overflow: hidden;
            background-color: #fff;
        }

        .manager-approve-container thead {
            background: linear-gradient(135deg, #ffb703, #ff8800);
            color: #fff;
            text-align: center;
        }

        .manager-approve-container tbody tr:hover {
            background-color: #fff3cd !important;
            transition: 0.2s ease-in-out;
        }

        /* Buttons */
        .manager-approve-container .btn-success {
            background-color: #28a745;
            border: none;
            font-weight: 500;
        }

            .manager-approve-container .btn-success:hover {
                background-color: #218838;
            }

        .manager-approve-container .btn-danger {
            background-color: #dc3545;
            border: none;
            font-weight: 500;
        }

            .manager-approve-container .btn-danger:hover {
                background-color: #c82333;
            }

        /* Badge */
        .manager-approve-container .badge {
            font-size: 0.9rem;
            padding: 6px 10px;
        }

        /* Empty message */
        .manager-approve-container p.text-muted {
            background-color: #fff3cd;
            padding: 15px;
            border-radius: 8px;
            display: inline-block;
        }
</style>
