@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "Manager - Approve Claims";
}

<div class="manager-approve-container mt-4">
    <h2 class="text-center mb-4">Academic Manager - Approve Claims</h2>

    @if (!Model.Any())
    {
        <p class="text-muted text-center">No verified claims to approve.</p>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Module</th> <!-- NEW COLUMN -->
                    <th>Total Amount</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Lecturer?.FullName ?? "N/A"</td>
                        <td>@claim.ModuleName ?? "N/A"</td> <!-- Display module -->
                        <td>R @claim.TotalAmount</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (claim.SupportingDocuments != null && claim.SupportingDocuments.Any())
                            {
                                <a href="@claim.SupportingDocuments.First().FilePath" target="_blank" class="text-primary fw-bold">
                                    @claim.SupportingDocuments.First().FileName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">@claim.Status</span>
                        </td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <!-- Approve -->
                                <form asp-action="ApproveClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-sm btn-success shadow-sm">Approve</button>
                                </form>
                                <!-- Reject -->
                                <form asp-action="RejectByManager" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <button type="submit" class="btn btn-sm btn-danger shadow-sm">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
