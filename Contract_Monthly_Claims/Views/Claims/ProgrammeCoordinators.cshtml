@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "Coordinator - Verify Claims";
}

<style>
    html, body {
        background-color: #fff8dc !important;
        height: 100%;
        margin: 0;
    }

    .container {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    h2 {
        background: linear-gradient(135deg, #ffcc00, #ffb703);
        color: #222;
        padding: 15px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    thead {
        background: linear-gradient(135deg, #ffb703, #ff8800);
        color: #fff;
    }

    tbody tr:hover {
        background-color: #fff3cd !important;
        transition: 0.2s ease-in-out;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        font-weight: 500;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: 500;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .badge {
        font-size: 0.9rem;
        padding: 6px 10px;
    }

    p.text-muted {
        background-color: #fff3cd;
        padding: 15px;
        border-radius: 8px;
        display: inline-block;
    }
</style>

<div class="container mt-4">
    <h2>Programme Coordinator - Verify Claims</h2>

    @if (!Model.Any())
    {
        <p class="text-muted text-center">No pending claims to verify.</p>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Module</th> <!-- NEW COLUMN -->
                    <th>Total Amount</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.Lecturer?.FullName ?? "N/A"</td>
                        <td>@claim.ModuleName ?? "N/A"</td> <!-- Display module -->
                        <td>R @claim.TotalAmount</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (claim.SupportingDocuments.Any())
                            {
                                <a href="@claim.SupportingDocuments.First().FilePath" target="_blank" class="text-primary fw-bold">
                                    @claim.SupportingDocuments.First().FileName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-warning text-dark">@claim.Status</span>
                        </td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <!-- Verify -->
                                <form asp-action="VerifyClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <input type="hidden" name="isApproved" value="true" />
                                    <button type="submit" class="btn btn-sm btn-success shadow-sm">Verify</button>
                                </form>
                                <!-- Reject -->
                                <form asp-action="VerifyClaim" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@claim.ClaimId" />
                                    <input type="hidden" name="isApproved" value="false" />
                                    <button type="submit" class="btn btn-sm btn-danger shadow-sm">Reject</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
