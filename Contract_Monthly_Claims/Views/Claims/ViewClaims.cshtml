@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<style>
    body {
        background-color: #fff8dc; /* light banana color */
    }

    h2 {
        background: linear-gradient(135deg, #ffc107, #ffb703);
        color: #333;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background: linear-gradient(135deg, #ffb703, #ff8800);
        color: white;
    }

    tbody tr:hover {
        background-color: #fff3cd !important;
        transition: 0.2s ease-in-out;
    }

    .badge {
        font-size: 0.9rem;
        padding: 6px 10px;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-3">My Submitted Claims</h2>

    @if (Model.Count == 0)
    {
        <p class="text-muted text-center">No claims submitted yet.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Module</th> <!-- NEW COLUMN -->
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Documents</th>
                    <th>Date Submitted</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.ClaimId</td>
                        <td>@c.ModuleName</td> <!-- Display module -->
                        <td>@c.HoursWorked</td>
                        <td>R @c.HourlyRate</td>
                        <td><strong>R @(c.HoursWorked* c.HourlyRate)</strong></td>
                        <td>
                            <span class="badge
                                                @(c.Status == "Approved" ? "bg-success" :
                                                                            c.Status == "Rejected" ? "bg-danger" :
                                                                            c.Status == "Verified" ? "bg-info" : "bg-warning")">
                        @c.Status
                    </span>
                </td>
                <td>
                    @if (c.SupportingDocuments != null && c.SupportingDocuments.Any())
                            {
                                @foreach (var doc in c.SupportingDocuments)
                                {
                                    <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                    
                                    <br />
                                }
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        </td>
                        <td>@c.DateSubmitted.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
