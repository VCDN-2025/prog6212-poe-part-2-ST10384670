@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "Coordinator - Verify Claims";
}

<style>
    /* Page background */
    body {
        background-color: #fff8dc !important; /* soft banana tone */
    }

    /* Header banner */
    h2 {
        background: linear-gradient(135deg, #ffb703, #ffcc00);
        color: #333;
        padding: 15px;
        border-radius: 10px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Table container */
    .container {
        background-color: #ffffff;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    /* Table */
    table {
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
    }

    thead {
        background: linear-gradient(135deg, #ffb703, #ff8800);
        color: #fff;
        text-align: center;
    }

    tbody tr:hover {
        background-color: #fff3cd !important; /* pale yellow hover */
        transition: 0.2s ease-in-out;
    }

    /* Buttons */
    .btn-success {
        background-color: #28a745;
        border: none;
        font-weight: 500;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: 500;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Empty message */
    p.text-muted {
        background-color: #fff3cd;
        padding: 15px;
        border-radius: 8px;
        display: inline-block;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">Programme Coordinator - Verify Claims</h2>

    @if (Model.Count == 0)
    {
        <p class="text-muted text-center">No pending claims.</p>
    }
    else
    {
        <table class="table table-hover table-bordered align-middle">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Total</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.ClaimId</td>
                        <td>@c.Lecturer?.FullName ?? "N/A"</td>
                        <td>R @(c.HoursWorked* c.HourlyRate)</td>
                        <td>@c.Notes</td>
                        <td>
                            @if (c.SupportingDocuments != null && c.SupportingDocuments.Any())
                            {
                                <a href="@c.SupportingDocuments.First().FilePath" target="_blank" class="text-primary fw-bold">
                                    @c.SupportingDocuments.First().FileName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-warning text-dark">@c.Status</span>
                        </td>
                        <td>
                            <form asp-action="VerifyClaim" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@c.ClaimId" />
                                <button type="submit" class="btn btn-sm btn-success">Verify</button>
                            </form>
                            <form asp-action="RejectClaim" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@c.ClaimId" />
                                <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
