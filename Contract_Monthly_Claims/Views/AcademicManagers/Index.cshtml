@model List<Contract_Monthly_Claims.Models.Claim>
@{
    ViewData["Title"] = "Manager - Approve Claims";
}

<div class="container mt-4">
    <h2 class="text-center text-success mb-3">Academic Manager - Approve Claims</h2>

    @if (Model.Count == 0)
    {
        <p class="text-muted text-center">No verified claims to approve.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer</th>
                    <th>Total</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.ClaimId</td>
                        <td>@c.Lecturer?.FullName</td>
                        <td>R @(c.HoursWorked* c.HourlyRate)</td>
                        <td>@c.Notes</td>
                        <td>
                            @if (c.SupportingDocuments.Any())
                            {
                                <a href="@c.SupportingDocuments.First().FilePath" target="_blank">
                                    @c.SupportingDocuments.First().FileName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>@c.Status</td>
                        <td>
                            <form asp-action="ApproveClaim" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@c.ClaimId" />
                                <button type="submit" class="btn btn-sm btn-primary">Approve</button>
                            </form>
                            <form asp-action="RejectClaim" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@c.ClaimId" />
                                <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
